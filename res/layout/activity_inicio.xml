<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morado_Fondonicio"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Inicio" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amarillo_inicio"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblTituloIncListview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="23dp"
            android:text="@string/lblNuevosIncidentes"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ListView
            android:id="@+id/lstNuevosIncidentes"
            android:layout_width="match_parent"
            android:layout_height="200dp" >
        </ListView>

        <Button
            android:id="@+id/btnCrearIncidente"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="0dp"
            android:background="@color/rojo_inicioBototes"
            android:paddingBottom="0dp"
            android:text="@string/lblbntCrearIncidente"
            android:onClick="crearIncidente" />

        <Button
            android:id="@+id/btnConsultaIncidentes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/rojo_inicioBototes"
            android:text="@string/lblbtnConsultaIncidente" 
            android:onClick="consultarIncidente" />

        <Button
            android:id="@+id/btnIncidentesPorAmigos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/rojo_inicioBototes"
            android:text="@string/lblbtnIncidentesPorAmigos"
            android:textSize="17sp"
            android:onClick="consultarIncidentePorAmigos" />

        <Button
            android:id="@+id/btnAjustes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/rojo_inicioBototes"
            android:text="@string/lblbtnAjustes"
            android:onClick="ajustes" />

    </LinearLayout>

</RelativeLayout>
